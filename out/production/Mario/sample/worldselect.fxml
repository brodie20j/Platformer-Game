<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.layout.GridPane?>
<GridPane fx:controller="sample.WorldController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center"
          hgap="10"
          vgap="10"
>
    <Label fx:id="mainMenuLabel" text="Super Mario" GridPane.rowIndex="0" style="-fx-font: 100px Tahoma; " alignment="center" />
    <Button fx:id = "startButton" GridPane.rowIndex="1" text="Start Game" onAction="#goToGame" alignment="center"/>
    <Button fx:id = "instructionButton" GridPane.rowIndex="2" text="Instructions" onAction="#goToInstructions" />
    <Label fx:id="instructionLabel" text="" GridPane.rowIndex="3" alignment="center"/>
    <Button fx:id = "exitButton" GridPane.rowIndex="4" text="Exit" onAction="#exitButton" />
</GridPane>

